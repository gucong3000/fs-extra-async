{
	"env": {
		"browser": false,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"parser": "babel-eslint",
	"root": true,
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-console": [
			"off",
			{
				"allow": [
					"warn",
					"error",
					"info",
					"dir",
					"time",
					"debug"
				]
			}
		],
		"quotes": [
			"error",
			"double",
			{
				"allowTemplateLiterals": true,
				"avoidEscape": true
			}
		],
		"valid-jsdoc": [
			"error",
			{
				"requireReturn": false
			}
		]
	}
}